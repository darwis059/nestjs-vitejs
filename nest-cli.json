{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "assets": [
      {
        "include": "public",
        "outDir": "dist"
      },
      {
        "include": "views",
        "outDir": "dist"
      }
    ],
    "watchAssets": false
  }
}
